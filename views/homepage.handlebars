<div class="post-list">
  {{#each posts as |post| }}
    <div class="post">
      <h2>{{post.title}}</h2>
      <p>{{post.content}}</p>
      <div class="post-meta">
        <span>Posted by: {{user.username}}</span>
        <span>on {{format_date date_created}}</span>
      </div>
    </div>
  {{/each}}
</div>

